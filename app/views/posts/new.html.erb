<h1> Post Form Page </h1>

<%= form_for(@post) do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>

<%= f.label :content %>
<%= f.text_field :content %>

<%= f.label :blogger %>
<%= f.collection_select :blogger_id, Blogger.all, :id, :name %>

<%= f.label :post %>
<%= f.collection_select :destination_id, Destination.all, :id, :name %>

<%= f.submit %>

<% end %>